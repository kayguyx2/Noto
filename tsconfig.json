{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
		"skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@styles/*": ["src/styles/*"],
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
        }
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
